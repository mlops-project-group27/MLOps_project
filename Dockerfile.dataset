FROM python:3.12-slim

WORKDIR /app

# System deps (minimal)
RUN apt-get update && apt-get install -y \
    curl \
    unzip \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ src/

# Kaggle auth must be mounted, not baked
# dataset/raw must be mounted
CMD ["python", "src/credit_card_fraud_analysis/make_dataset.py"]
